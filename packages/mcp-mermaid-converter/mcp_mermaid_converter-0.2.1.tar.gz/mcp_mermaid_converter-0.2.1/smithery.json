{
  "name": "mcp-mermaid-converter",
  "displayName": "Mermaid图表转换器",
  "description": "将Mermaid图表转换为PNG或SVG图片的MCP服务",
  "version": "0.1.0",
  "author": "MCP Mermaid Converter Team",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/mcp-mermaid-converter",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-mermaid-converter.git"
  },
  "categories": [
    "utilities",
    "developer-tools",
    "graphics"
  ],
  "keywords": [
    "mermaid",
    "diagram",
    "converter",
    "visualization",
    "kroki"
  ],
  "mcp": {
    "version": "0.9.0",
    "transport": "stdio"
  },
  "runtime": {
    "name": "python",
    "version": ">=3.10"
  },
  "installation": {
    "type": "uvx",
    "command": "uvx mcp-mermaid-converter"
  },
  "config": {
    "mcpServers": {
      "mcp-mermaid-converter": {
        "command": "uvx",
        "args": ["mcp-mermaid-converter"],
        "env": {}
      }
    }
  },
  "tools": [
    {
      "name": "convert_mermaid_file",
      "description": "将Mermaid图表文件转换为图片"
    },
    {
      "name": "convert_mermaid_text",
      "description": "将Mermaid文本直接转换为图片"
    }
  ]
}

