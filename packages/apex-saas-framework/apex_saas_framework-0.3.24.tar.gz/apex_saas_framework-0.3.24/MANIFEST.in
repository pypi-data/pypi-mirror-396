# Include documentation
include README.md
include LICENSE

# Include migration templates
recursive-include src/apex/migrations *.py
recursive-include src/apex/migrations *.mako

# Include all Python packages
recursive-include src/apex *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store

# Exclude tests from distribution
recursive-exclude tests *

# Exclude development files
exclude .gitignore
exclude fix_router_params.py
