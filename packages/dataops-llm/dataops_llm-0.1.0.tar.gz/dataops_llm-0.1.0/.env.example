# DataOps LLM Engine - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM Configuration (LiteLLM)
# ============================================================================

# LLM Provider API Key (required)
# For OpenAI: Get from https://platform.openai.com/api-keys
# For Anthropic: Get from https://console.anthropic.com/settings/keys
# For other providers: Check LiteLLM documentation
LITELLM_API_KEY=sk-...

# LLM Model Name
# Examples:
#   OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
#   Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
#   Google: gemini-pro
#   See LiteLLM docs for full list: https://docs.litellm.ai/docs/providers
LITELLM_MODEL=gpt-4

# Sampling temperature (0.0 = deterministic, 1.0 = creative)
# Lower values recommended for code generation
LITELLM_TEMPERATURE=0.1

# Maximum tokens in LLM response
LITELLM_MAX_TOKENS=2000

# Request timeout in seconds
LITELLM_TIMEOUT=60

# Optional: Custom API base URL (if using proxy or custom endpoint)
# LITELLM_BASE_URL=https://api.openai.com/v1


# ============================================================================
# Sandbox Configuration
# ============================================================================

# Maximum execution time in seconds (1-600)
SANDBOX_TIMEOUT=60

# Maximum memory usage in megabytes (1-4096)
SANDBOX_MEMORY_MB=512

# Maximum DataFrame rows (prevents processing huge datasets)
SANDBOX_MAX_DATAFRAME_ROWS=1000000

# Maximum DataFrame columns
SANDBOX_MAX_DATAFRAME_COLS=1000

# Maximum output file size in megabytes
SANDBOX_MAX_OUTPUT_SIZE_MB=100


# ============================================================================
# Application Configuration
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
APP_LOG_LEVEL=INFO

# Enable dry-run mode by default (true/false)
APP_ENABLE_DRY_RUN_BY_DEFAULT=false

# Enable code caching for identical requests (true/false)
APP_ENABLE_CODE_CACHING=false


# ============================================================================
# FastAPI Configuration (Optional - for web API)
# ============================================================================

# API host
# API_HOST=0.0.0.0

# API port
# API_PORT=8000

# Enable CORS (true/false)
# API_ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
# API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
