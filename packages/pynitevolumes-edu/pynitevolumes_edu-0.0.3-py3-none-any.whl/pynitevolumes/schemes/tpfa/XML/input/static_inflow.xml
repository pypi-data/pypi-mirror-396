<?xml version="1.0"?>
<computation name="Laplace equation with Dirichlet on the boundary" output_file="Results">
    <simulation>
        <space mesh_family="rect" coarsest="0" finest="6"></space>
    </simulation>
    <problem>
        <operator>

            <volumic type='const'>
                1.0
            </volumic>
            <convection scheme='upwind'>
                <vx type='expr'>
                    -Y
                </vx>
                <vy type ='expr'>
                    X
                </vy>
            </convection>
        </operator>
        <boundary>
            <neumann>
                <where type='whole' inflow='True'></where>
                <data type='reference'></data>
                <parameters><!-->
                    <a type='expr'> X-0.5</a>
                    <b type='expr'> X-0.7</b><--></parameters>
            </neumann>
        </boundary>
        <right-hand-side type='reference'>
        </right-hand-side>
    </problem>
    <reference type='expr'>
        X*(1-X)+Y*(1-Y)
    </reference>
</computation>
