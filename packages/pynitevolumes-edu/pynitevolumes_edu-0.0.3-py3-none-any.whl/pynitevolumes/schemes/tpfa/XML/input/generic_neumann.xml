<?xml version="1.0"?>
<computation name="Laplace equation with Dirichlet on the boundary" output_file="Results">
    <simulation>
        <space mesh_family="rect" coarsest="0" finest="6"></space>
    </simulation>
    <problem>
        <operator>
            <diffusion type='const'>
                1.0
            </diffusion>
            <convection scheme='centered'>
                <vx type='expr'>
                    X
                </vx>
                <vy type='expr'>
                    Y
                </vy>
            </convection>
            <volumic type='const'>
                1.0
            </volumic>
        </operator>
        <boundary>
            <neumann>
                <where type='whole'></where>
                <data type='reference'></data>
                <parameters></parameters>
            </neumann>
        </boundary>
        <right-hand-side type='reference'>
        </right-hand-side>
    </problem>
    <reference type='expr'>
        X*(1-X)+Y*(1-Y)
    </reference>
</computation>
