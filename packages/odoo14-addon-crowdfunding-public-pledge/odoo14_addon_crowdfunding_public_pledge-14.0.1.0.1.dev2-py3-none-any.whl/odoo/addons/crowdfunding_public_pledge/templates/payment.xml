<odoo>
    <template id="pay_details" inherit_id="crowdfunding.pay_details">
        <div class="form-group" position="inside">
            <div class="form-check form-switch">
                <input
                    class="form-check-input"
                    type="checkbox"
                    id="public"
                    name="public"
                />
                <label
                    class="form-check-label"
                    for="public"
                >Publish my pledge on the website</label>
            </div>
        </div>
    </template>
</odoo>
