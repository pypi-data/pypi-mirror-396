<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='website_cookies_bar_setting']" position="after">
                <setting id="cookiebot_setting" help="Ask for consent on cookies usage">
                    <field name="cookiebot_enabled" />
                    <div
                        class="content-group"
                        invisible="not cookiebot_enabled"
                        id="cookiebot_fields"
                    >
                        <div class="mt8">
                            <a
                                role="button"
                                href="https://cookiebot.com/goto/help"
                                class="btn btn-link oe-inline"
                                target="_blank"
                            >
                                <i class="o_button_icon oi oi-fw oi-arrow-right me-1" />
                                How to configure Cookiebot
                            </a>
                            <div class="text-muted">
                                Instead of step 3, paste your Domain Group ID below:
                            </div>
                        </div>
                        <div class="row mt8">
                            <label class="col-lg-3" for="cookiebot_dgid" />
                            <field
                                name="cookiebot_dgid"
                                placeholder="00000000-0000-0000-0000-000000000000"
                                required="cookiebot_enabled"
                            />
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
