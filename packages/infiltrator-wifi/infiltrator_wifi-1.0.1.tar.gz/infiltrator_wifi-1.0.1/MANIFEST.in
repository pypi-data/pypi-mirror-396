# Include documentation
include README.md
include LICENSE.md
include QUICKSTART.md
include CHANGELOG.md

# Include requirements
include requirements.txt

# Include data files
recursive-include infiltrator/data *.txt *.json

# Exclude development and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude tests
prune tests
prune docs/_build

# Exclude debian packaging from source distribution
prune debian