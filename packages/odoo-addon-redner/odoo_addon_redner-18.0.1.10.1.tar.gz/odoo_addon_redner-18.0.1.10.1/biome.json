{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {"enabled": false, "defaultBranch": "19.0"},
  "files": {"includes": ["**", "!static/{lib,src/lib}"], "ignoreUnknown": true},
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": false,
    "expand": "auto",
    "useEditorconfig": true
  },
  "linter": {"enabled": true, "rules": {"recommended": false}},
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": false
    }
  },
  "html": {"formatter": {"selfCloseVoidElements": "always"}},
  "overrides": [
    {
      "includes": ["**"],
      "javascript": {
        "globals": [
          "_",
          "jQuery",
          "openerp",
          "luxon",
          "odoo",
          "fuzzy",
          "owl",
          "$",
          "moment"
        ]
      },
      "linter": {
        "rules": {
          "complexity": {
            "noAdjacentSpacesInRegex": "warn",
            "noCommaOperator": "warn",
            "noExtraBooleanCast": "warn",
            "noImplicitCoercions": "warn",
            "noUselessConstructor": "warn",
            "noUselessEscapeInRegex": "warn",
            "noUselessLabel": "warn",
            "noUselessLoneBlockStatements": "warn",
            "noUselessRename": "warn",
            "noUselessStringConcat": "warn",
            "noUselessTernary": "error",
            "noUselessUndefinedInitialization": "warn",
            "noVoid": "warn",
            "useLiteralKeys": "warn"
          },
          "correctness": {
            "noConstAssign": "error",
            "noConstantCondition": "warn",
            "noEmptyCharacterClassInRegex": "warn",
            "noEmptyPattern": "error",
            "noGlobalObjectCalls": "warn",
            "noInnerDeclarations": "warn",
            "noInvalidConstructorSuper": "warn",
            "noInvalidUseBeforeDeclaration": "error",
            "noSelfAssign": "warn",
            "noSwitchDeclarations": "warn",
            "noUndeclaredVariables": "error",
            "noUnreachable": "error",
            "noUnreachableSuper": "warn",
            "noUnsafeFinally": "error",
            "noUnusedLabels": "error",
            "noUnusedVariables": "error",
            "useIsNan": "error",
            "useParseIntRadix": "warn",
            "useValidTypeof": "warn",
            "useYield": "warn"
          },
          "security": {"noGlobalEval": "error"},
          "style": {
            "noNegationElse": "warn",
            "noParameterAssign": "warn",
            "noRestrictedGlobals": {"level": "warn", "options": {}},
            "noRestrictedImports": "warn",
            "noYodaExpression": "warn",
            "useArrayLiterals": "warn",
            "useCollapsedElseIf": "error",
            "useConsistentBuiltinInstantiation": "warn",
            "useConst": "warn",
            "useShorthandAssign": "error"
          },
          "suspicious": {
            "noAlert": "warn",
            "noCatchAssign": "error",
            "noClassAssign": "warn",
            "noControlCharactersInRegex": "warn",
            "noDebugger": "error",
            "noDoubleEquals": "warn",
            "noDuplicateCase": "error",
            "noDuplicateClassMembers": "error",
            "noDuplicateObjectKeys": "error",
            "noDuplicateParameters": "error",
            "noEmptyBlockStatements": "error",
            "noFallthroughSwitchClause": "warn",
            "noFunctionAssign": "error",
            "noGlobalAssign": "error",
            "noIrregularWhitespace": "warn",
            "noLabelVar": "warn",
            "noOctalEscape": "warn",
            "noPrototypeBuiltins": "warn",
            "noRedeclare": "warn",
            "noSelfCompare": "warn",
            "noShadowRestrictedNames": "warn",
            "noSparseArray": "warn",
            "noWith": "warn",
            "useIterableCallbackReturn": "warn"
          }
        }
      }
    }
  ],
  "assist": {"enabled": true, "actions": {"source": {"organizeImports": "on"}}}
}
