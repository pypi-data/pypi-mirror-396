# Include source files
include btoon_python.cpp
include pyproject.toml
include setup.py
include LICENSE
include README.md

# Include test files
include test_comprehensive.py
include test_quick.py

# Include package files
recursive-include btoon *.py *.pyi py.typed

# Include btoon-core submodule (source files needed for building)
# Note: If core submodule is empty, it will be cloned during build
recursive-include core/include *.h *.hpp
recursive-include core/src *.cpp *.h *.hpp
include core/CMakeLists.txt
include core/LICENSE
include core/README.md
include core/.gitmodules

# Exclude unnecessary core files
prune core/tests
prune core/tools
prune core/examples
prune core/docs
prune core/scripts
prune core/.git
prune core/.github
prune core/build
prune core/build_shared

# Include examples
recursive-include examples *.py

# Exclude compiled files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
global-exclude *.a
global-exclude *.lib
