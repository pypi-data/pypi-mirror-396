<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record id="account_payment_privilege" model="res.groups.privilege">
            <field name="name">Payment and Debit Orders</field>
            <field name="sequence">60</field>
            <field name="category_id" ref="base.module_category_accounting" />
        </record>
        <record id="group_account_payment" model="res.groups">
            <field name="name">Manage</field>
            <field
                name="user_ids"
                eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
            />
            <field name="privilege_id" ref="account_payment_privilege" />
        </record>
    </data>
    <data noupdate="1">
        <record id="account_payment_order_company_rule" model="ir.rule">
            <field name="name">Payment order multi-company rule</field>
            <field name="model_id" ref="model_account_payment_order" />
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        <record id="account_payment_lot_company_rule" model="ir.rule">
            <field name="name">Payment lot multi-company rule</field>
            <field name="model_id" ref="model_account_payment_lot" />
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        <record id="account_payment_line_company_rule" model="ir.rule">
            <field name="name">Payment line multi-company rule</field>
            <field name="model_id" ref="model_account_payment_line" />
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
