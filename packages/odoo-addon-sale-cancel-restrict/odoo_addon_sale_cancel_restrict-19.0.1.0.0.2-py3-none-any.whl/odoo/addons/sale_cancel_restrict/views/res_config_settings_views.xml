<odoo>
    <record
        id="res_config_settings_view_form_inherit_sale_management"
        model="ir.ui.view"
    >
        <field
            name="name"
        >res.config.settings.view.form.inherit.sale.management - confirmed_invoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting id="online_signature" position="after">
                <setting
                    id="sale_cancel_restrict"
                    help="When you try to cancel a sales order, if there is some delivery done or an invoice posted will prevent the sales order from being cancelled."
                >
                    <field name="enable_sale_cancel_restrict" />
                </setting>
            </setting>
        </field>
    </record>
</odoo>
