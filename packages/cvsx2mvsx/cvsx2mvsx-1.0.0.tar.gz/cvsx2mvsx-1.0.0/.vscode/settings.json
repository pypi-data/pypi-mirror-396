{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ruff_cache": true,
    },
    "files.associations": {
        "**/**/*.mvsj": "json",
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit",
            "source.removeUnusedImports": "never",
            "source.unusedImports": "never",
        },
    },
    // Themes
    "workbench.preferredDarkColorTheme": "Kimbie Dark",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "peacock.color": "#D76B00",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#ff840b",
        "activityBar.background": "#ff840b",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#00803f",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#ff840b",
        "statusBar.background": "#d76b00",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#ff840b",
        "statusBarItem.remoteBackground": "#d76b00",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#d76b00",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#d76b0099",
        "titleBar.inactiveForeground": "#e7e7e799"
    }
}