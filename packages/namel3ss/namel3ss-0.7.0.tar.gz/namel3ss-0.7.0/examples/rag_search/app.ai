app "rag-search":
  entry_page "home"

page "home" at "/":
  section "upload":
    heading "RAG Search"
    text "This skeleton shows where upload/query UI would go once wired to flows."
  section "query":
    text "Use Studio to run flows manually; UI wiring is kept minimal for stability."

model "default":
  provider "dummy"

ai "rewrite":
  model "default"
  input from "user_input"

flow "answer":
  step "rewrite":
    kind "ai"
    target "rewrite"
  step "echo":
    kind "tool"
    target "echo"
