memory "support_history":
  type "conversation"

model "support-llm":
  provider "openai"

ai "classify_issue":
  model "support-llm"
  input from "user_input"
  description "Classify the user's support request."

agent "support_agent":
  goal "Provide helpful support answers using the classification and history."
  personality "patient and pragmatic"

flow "support_flow":
  description "Classify the request, respond, and log the interaction."
  step "classify":
    kind "ai"
    target "classify_issue"
  step "respond":
    kind "agent"
    target "support_agent"
  step "log":
    kind "tool"
    target "echo"
    message "User request was processed and logged."

app "support_bot_app":
  entry_page "support_home"
  description "Support assistant with memory and a simple logging tool."

page "support_home" at "/support":
  section "intro":
    heading "Support Bot"
    text "Describe an issue; the flow classifies it, routes to an agent, and logs the result."
  section "how":
    text "This example focuses on backend flows; open Studio to view traces when you run support_flow."
