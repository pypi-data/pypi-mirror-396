app "agents-flows":
  entry_page "home"

page "home" at "/":
  section "info":
    heading "Agents + Flows demo"
    text "Run the orchestrate flow to see AI + agent steps executed."

model "default":
  provider "dummy"

agent "writer":
  goal "Write a short statement about a topic."

flow "orchestrate":
  step "branch":
    kind "ai"
    target "decide"
  step "fanout":
    kind "agent"
    target "writer"
  step "join":
    kind "tool"
    target "echo"

ai "decide":
  model "default"
  input from "user_input"
