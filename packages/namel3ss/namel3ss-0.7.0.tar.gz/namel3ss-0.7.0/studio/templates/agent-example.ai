model "helper-llm":
  provider "openai"

agent "helper":
  goal "Offer concise, useful replies to user questions."
  personality "friendly and direct"

ai "echo_intent":
  model "helper-llm"
  input from "user_input"
  description "Restate the user's request to clarify intent."

flow "ask_helper":
  step "clarify":
    kind "ai"
    target "echo_intent"
  step "respond":
    kind "agent"
    target "helper"
