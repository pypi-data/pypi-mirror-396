

type priority =
  | Low
  | Medium
  | High

type user = {
  id : int;
  name : LString.t;
}

type task = {
  id : int;
  title : LString.t;
  description : LString.t;
  priority : priority;
  deadline : int;
  assigned_to : user option;
  completed : bool;
}

type project = {
  id : int;
  name : LString.t;
  tasks : task list;
}
