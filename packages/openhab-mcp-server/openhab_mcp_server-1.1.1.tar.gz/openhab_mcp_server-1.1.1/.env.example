# openHAB MCP Server Environment Configuration
# Copy this file to .env and customize for your environment

# openHAB Connection Settings
OPENHAB_URL=http://localhost:8080
OPENHAB_TOKEN=your-openhab-api-token-here
OPENHAB_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_PORT=8081

# Container Configuration
# Set to true to include openHAB service in docker-compose
INCLUDE_OPENHAB=false

# Development Settings (for docker-compose.override.yml)
DEV_MODE=false

# Security Settings
VALIDATE_SSL=true
MAX_REQUEST_SIZE=10MB

# Feature Flags
ENABLE_SCRIPT_EXECUTION=true
ENABLE_DOCUMENTATION_CACHE=true
DOCUMENTATION_CACHE_TTL=3600

# Resource Limits
MEMORY_LIMIT=512M
CPU_LIMIT=0.5
MEMORY_RESERVATION=256M
CPU_RESERVATION=0.25

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16

# Volume Paths (relative to docker-compose.yml)
CONFIG_PATH=./config
LOGS_PATH=./logs
DATA_PATH=./data