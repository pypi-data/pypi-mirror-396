{
  "openhab_url": "http://openhab:8080",
  "openhab_token": "",
  "timeout": 30,
  "log_level": "INFO",
  "health_check": {
    "enabled": true,
    "port": 8081,
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "security": {
    "validate_ssl": true,
    "max_request_size": "10MB",
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 60
    }
  },
  "features": {
    "script_execution": {
      "enabled": true,
      "timeout": 30,
      "memory_limit": "100MB"
    },
    "documentation_cache": {
      "enabled": true,
      "ttl": 3600
    }
  }
}