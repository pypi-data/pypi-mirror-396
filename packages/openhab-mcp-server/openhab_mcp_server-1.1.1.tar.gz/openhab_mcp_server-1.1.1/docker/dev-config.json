{
  "openhab_url": "http://host.docker.internal:8080",
  "openhab_token": "dev-token-here",
  "timeout": 10,
  "log_level": "DEBUG",
  "health_check": {
    "enabled": true,
    "port": 8081,
    "interval": 15,
    "timeout": 5,
    "retries": 2
  },
  "security": {
    "validate_ssl": false,
    "max_request_size": "10MB",
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 120
    }
  },
  "features": {
    "script_execution": {
      "enabled": true,
      "timeout": 60,
      "memory_limit": "200MB"
    },
    "documentation_cache": {
      "enabled": false,
      "ttl": 300
    }
  },
  "development": {
    "debug_mode": true,
    "verbose_logging": true,
    "mock_openhab": false
  }
}