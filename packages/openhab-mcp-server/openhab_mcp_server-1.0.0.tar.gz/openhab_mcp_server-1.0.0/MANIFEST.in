# Include documentation and configuration files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include source code and package data
recursive-include src *.py
recursive-include src *.typed

# Include test files for source distributions
recursive-include tests *.py

# Include configuration examples
recursive-include .kiro/settings *.json

# Exclude development and build artifacts
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude Makefile

# Exclude development-only directories
prune .hypothesis
prune .pytest_cache
prune __pycache__
prune *.egg-info
prune build
prune dist
prune .git
prune .mypy_cache
prune .ruff_cache
prune .tox
prune .venv
prune venv

# Exclude development-only files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude *.swp
global-exclude *.swo
global-exclude *~