{
  "mcpServers": {
    "openhab-dev": {
      "command": "python",
      "args": ["-m", "openhab_mcp_server.cli"],
      "env": {
        "OPENHAB_URL": "http://localhost:8080",
        "OPENHAB_TOKEN": "",
        "OPENHAB_TIMEOUT": "30",
        "LOG_LEVEL": "DEBUG"
      },
      "disabled": false,
      "autoApprove": [
        "get_item_state",
        "list_items",
        "get_thing_status",
        "list_things",
        "list_rules",
        "get_system_info",
        "list_bindings",
        "get_health_status",
        "get_diagnostics",
        "get_metrics_summary",
        "get_operation_examples",
        "get_api_documentation"
      ]
    }
  }
}