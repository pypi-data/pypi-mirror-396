$component_border: solid $panel-lighten-1;

Screen {
    layout: grid;
    grid-size: 2 1;
    grid-columns: 1fr 2fr;
}


CurrentTaskInfo {
    height: 1fr;
    border: $component_border;
    background: $background;
}

#right_panel {
    layout: grid;
    grid-rows: 2fr 1fr;   

    Static {
        height: 100%;
    }
}

#bottom_panel {
    border: $component_border;

    Label {
        height: auto;
    }
}


