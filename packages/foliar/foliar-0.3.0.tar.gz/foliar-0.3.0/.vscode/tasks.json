{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust lint",
            "type": "shell",
            "command": "cargo clippy --fix --allow-dirty -- -W clippy::pedantic",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "rust format",
            "type": "shell",
            "command": "cargo fmt",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "rust unit tests",
            "type": "shell",
            "command": "cargo test",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "rust compile for development",
            "type": "shell",
            "command": "maturin develop",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "python format",
            "type": "shell",
            "command": "ruff format",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "python lint",
            "type": "shell",
            "command": "ruff check",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "python type check",
            "type": "shell",
            "command": "mypy .",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "check all",
            "type": "shell",
            "dependsOn": [
                "rust lint",
                "rust format",
                "rust unit tests",
                "python format",
                "python lint",
                "python type check"
            ],
            "group": "build",
            "dependsOrder": "sequence"
        }
    ]
}
