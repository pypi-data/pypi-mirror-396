<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_packaging_form_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.form.view.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet//h1" position="before">
                <widget
                    name="web_ribbon"
                    title="Archived"
                    bg_color="bg-danger"
                    invisible="active == True"
                />
            </xpath>
        </field>
    </record>

    <record id="product_packaging_search_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.search.view.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_search_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <filter
                    name="inactive"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
            </field>
        </field>
    </record>
</odoo>
