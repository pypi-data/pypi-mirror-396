{
  "$id": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/schemas/domains/procurement/init/award.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Procurement Award",
  "type": "object",
  "properties": {
    "entityTypeUri": {
      "const": "cep:entity:pp:award"
    },
    "awardIdentifier": {
      "type": "string"
    },
    "awardDate": {
      "type": "string",
      "format": "date"
    },
    "value": {
      "type": "number"
    },
    "currency": {
      "type": "string"
    },
    "selectedSupplierRef": {
      "type": "string",
      "description": "Reference to the supplier verifiableId or domain-level ID."
    },
    "procedureRef": {
      "type": "string",
      "description": "Reference to the procedure identifier or verifiableId."
    }
  },
  "required": ["entityTypeUri", "awardIdentifier", "awardDate", "value"],
  "additionalProperties": false
}
