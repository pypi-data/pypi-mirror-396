{
  "$id": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/schemas/domains/campaign-finance/contribution.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Campaign Finance Contribution",
  "allOf": [
    { "$ref": "transaction.schema.json" },
    {
      "properties": {
        "entityTypeUri": { "const": "cep:entity:cf:contribution" },
        "contributorRef": { "type": "string" },
        "recipientCommitteeRef": { "type": "string" },
        "contributionTypeUri": { "type": "string" },
        "reportingPeriod": { "type": "string" }
      },
      "required": ["entityTypeUri", "contributorRef", "recipientCommitteeRef"]
    }
  ]
}
