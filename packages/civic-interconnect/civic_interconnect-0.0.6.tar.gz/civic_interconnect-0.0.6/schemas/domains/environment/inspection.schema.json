{
  "$id": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/schemas/domains/environment/inspection.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Environmental Inspection Activity",
  "type": "object",

  "properties": {
    "entityTypeUri": {
      "const": "cep:entity:env:inspectionActivity"
    },
    "inspectionDate": { "type": "string", "format": "date" },
    "inspectionType": { "type": "string" },
    "jurisdictionUri": { "type": "string" },

    "facilityRef": {
      "type": "object",
      "properties": {
        "facilityVerifiableId": { "type": "string" }
      },
      "required": ["facilityVerifiableId"]
    },

    "regulatorAgencyRef": {
      "type": "object",
      "properties": {
        "agencyVerifiableId": { "type": "string" }
      }
    }
  },

  "required": ["entityTypeUri", "inspectionDate", "facilityRef"]
}
