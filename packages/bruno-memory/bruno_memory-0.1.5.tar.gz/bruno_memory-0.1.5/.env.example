# Environment Variables for Bruno-Memory Docker Testing
# Copy this file to .env and adjust values as needed
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your preferred settings
#   docker-compose up -d
#
# Note: These are default values. Override them in your .env file.

# ============================================================================
# PostgreSQL Configuration
# ============================================================================

# PostgreSQL connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=testpass123
POSTGRES_DB=bruno_memory_test

# PostgreSQL logging (for development)
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_DURATION=on

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=15
REDIS_PASSWORD=

# Redis resource limits
REDIS_MAX_MEMORY=256mb
REDIS_LOG_LEVEL=notice

# ============================================================================
# ChromaDB Configuration
# ============================================================================

# ChromaDB connection settings
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# ChromaDB settings
CHROMADB_TELEMETRY=false
CHROMADB_LOG_LEVEL=INFO

# ChromaDB authentication (optional)
CHROMADB_AUTH_PROVIDER=chromadb.auth.token.TokenAuthenticationServerProvider
CHROMADB_AUTH_CREDENTIALS=test-token
CHROMADB_AUTH_HEADER=X-Chroma-Token

# ============================================================================
# Qdrant Configuration
# ============================================================================

# Qdrant connection settings
QDRANT_HOST=localhost
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_WEB_UI_PORT=6335

# Qdrant settings
QDRANT_LOG_LEVEL=INFO

# ============================================================================
# Development Tools (docker-compose.dev.yml only)
# ============================================================================

# Redis Commander Web UI
REDIS_COMMANDER_PORT=8081

# pgAdmin Web UI
PGADMIN_PORT=8082
PGADMIN_EMAIL=admin@bruno-memory.local
PGADMIN_PASSWORD=devpass123

# ============================================================================
# Testing Configuration
# ============================================================================

# Test execution settings
TEST_TIMEOUT=300
TEST_PARALLEL=auto
TEST_VERBOSE=1

# Backend feature flags (enable/disable specific backends in tests)
TEST_POSTGRESQL=true
TEST_REDIS=true
TEST_CHROMADB=true
TEST_QDRANT=true
TEST_SQLITE=true

# ============================================================================
# CI/CD Configuration
# ============================================================================

# CI environment detection
CI=false
GITHUB_ACTIONS=false

# CI resource limits
CI_MEMORY_LIMIT=2g
CI_CPU_LIMIT=2

# ============================================================================
# Additional Settings
# ============================================================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=bruno-memory

# Logging
LOG_LEVEL=INFO

# Health check settings
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=5
