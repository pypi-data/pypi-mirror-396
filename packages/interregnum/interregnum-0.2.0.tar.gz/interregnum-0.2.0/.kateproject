{
    "name": "interregnum",
    "lspclient": {
        "servers": {
            "python": {
                "command": [
                    "python",
                    "-m",
                    "pylsp",
                    "--check-parent-process"
                ],
                "root": ".",
                "settings": {
                    "pylsp": {
                        "plugins": {
                            "pylint": {
                                "enabled": true
                            },
                            "pycodestyle": {
                                "enabled": false
                            },
                            "ruff": {
                                "enabled": true
                            },
                            "jedi_completion": {
                                "enabled": true
                            },
                            "mypy": {
                                "enabled": true,
                                "live_mode": false
                            },
                            "black": {
                                "enabled": true
                            }
                        }
                    }
                }
            }
        }
    }
}
