# Include all Python & Text files
include *.py *.txt

# Include README, changelog, and license
include README.md
include CHANGELOG.md
include LICENSE.txt

# Include additional files or resources
include requirements.txt

# Include subpackages
recursive-include bb84 *.py
recursive-include notebooks *.ipynb

# Exclude unwanted files or directories
exclude *.pyc
global-exclude __pycache__
global-exclude *.pyc
global-exclude *.pyo
