{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cppdbg OCD load",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}\\output",
            "program": "${workspaceFolder}\\output\\${input:Executable}",
            "svdPath": "${config:prjCfg.svdPath}",
            "miDebuggerPath": "${config:prjCfg.gdbPath}",
            "debugServerPath": "${config:prjCfg.ocdPath}",
            "debugServerArgs": "-f ${config:prjCfg.ocdInterface} -f ${config:prjCfg.ocdTarget} -c \"${config:prjCfg.ocdUserCmd}\" -c \"gdb_port ${config:prjCfg.ocdPort}; init; reset halt; wait_halt;\"",
            "setupCommands": [
                {
                    "text": "target extended-remote :${config:prjCfg.ocdPort}"
                }
            ],
            "postRemoteConnectCommands": [
                {
                    "text": "load"
                },
                {
                    "text": "monitor reset",
                    "ignoreFailures": true
                },
                {
                    "text": "monitor shutdown",
                    "ignoreFailures": true
                }
            ],
            "filterStderr": true,
            "stopAtEntry": false
        },
        {
            "name": "Cppdbg OCD run",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}\\output",
            "program": "${workspaceFolder}\\output\\${input:Executable}",
            "svdPath": "${config:prjCfg.svdPath}",
            "miDebuggerPath": "${config:prjCfg.gdbPath}",
            "debugServerPath": "${config:prjCfg.ocdPath}",
            "debugServerArgs": "-f ${config:prjCfg.ocdInterface} -f ${config:prjCfg.ocdTarget} -c \"${config:prjCfg.ocdUserCmd}\" -c \"gdb_port ${config:prjCfg.ocdPort}; init; reset halt; wait_halt;\"",
            "setupCommands": [
                {
                    "text": "target extended-remote :${config:prjCfg.ocdPort}"
                }
            ],
            "postRemoteConnectCommands": [
                {
                    "text": "load"
                }
            ],
            "filterStderr": true,
            "stopAtEntry": false
        },
        {
            "name": "Cppdbg OCD debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}\\output",
            "program": "${workspaceFolder}\\output\\${input:Executable}",
            "svdPath": "${config:prjCfg.svdPath}",
            "miDebuggerPath": "${config:prjCfg.gdbPath}",
            "debugServerPath": "${config:prjCfg.ocdPath}",
            "debugServerArgs": "-f ${config:prjCfg.ocdInterface} -f ${config:prjCfg.ocdTarget} -c \"${config:prjCfg.ocdUserCmd}\" -c \"gdb_port ${config:prjCfg.ocdPort}; init; reset halt; wait_halt;\"",
            "setupCommands": [
                {
                    "text": "target extended-remote :${config:prjCfg.ocdPort}"
                }
            ],
            "postRemoteConnectCommands": [
                {
                    "text": "load"
                }
            ],
            "filterStderr": true,
            "stopAtEntry": true
        },
        {
            "name": "Cppdbg OCD attach",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}\\output",
            "program": "${workspaceFolder}\\output\\${input:Executable}",
            "svdPath": "${config:prjCfg.svdPath}",
            "miDebuggerPath": "${config:prjCfg.gdbPath}",
            "setupCommands": [
                {
                    "text": "target extended-remote ${config:prjCfg.ocdAddr}:${config:prjCfg.ocdPort}"
                }
            ],
            "filterStderr": true,
            "stopAtEntry": false
        },
        {
            "name": "Cppdbg run",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}\\output",
            "program": "${workspaceFolder}\\output\\${input:Executable}",
            "stopAtEntry": false
        },
        {
            "name": "Cppdbg debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}\\output",
            "program": "${workspaceFolder}\\output\\${input:Executable}",
            "stopAtEntry": true
        }
    ],
    "inputs": [
        {
            "id": "Executable",
            "type": "pickString",
            "description": "Executable file",
            "options": [
            ]
        }
    ]
}
