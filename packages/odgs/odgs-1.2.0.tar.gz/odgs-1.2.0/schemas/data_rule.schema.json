        "rule_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "domain": {
            "type": "string",
            "enum": [
                "Reference Data",
                "Data Validation",
                "Data Formatting",
                "Master Data Governance",
                "Safety & Compliance",
                "Business Rule Validation",
                "Data Quality Rule",
                "Database Constraint",
