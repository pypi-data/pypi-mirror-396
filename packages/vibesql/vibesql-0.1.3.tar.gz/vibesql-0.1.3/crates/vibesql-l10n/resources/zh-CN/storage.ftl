# VibeSQL 存储错误消息 - 简体中文
# 此文件包含 vibesql-storage crate 的所有错误消息。

# =============================================================================
# 表错误
# =============================================================================

storage-table-not-found = 未找到表 '{ $name }'

# =============================================================================
# 列错误
# =============================================================================

storage-column-count-mismatch = 列数不匹配：预期 { $expected }，实际 { $actual }
storage-column-index-out-of-bounds = 列索引 { $index } 越界
storage-column-not-found = 在表 '{ $table_name }' 中未找到列 '{ $column_name }'

# =============================================================================
# 索引错误
# =============================================================================

storage-index-already-exists = 索引 '{ $name }' 已存在
storage-index-not-found = 未找到索引 '{ $name }'
storage-invalid-index-column = { $message }

# =============================================================================
# 约束错误
# =============================================================================

storage-null-constraint-violation = 违反 NOT NULL 约束：列 '{ $column }' 不能为 NULL
storage-unique-constraint-violation = { $message }

# =============================================================================
# 类型错误
# =============================================================================

storage-type-mismatch = 列 '{ $column }' 类型不匹配：预期 { $expected }，实际 { $actual }

# =============================================================================
# 事务和目录错误
# =============================================================================

storage-catalog-error = 目录错误：{ $message }
storage-transaction-error = 事务错误：{ $message }
storage-row-not-found = 未找到行

# =============================================================================
# I/O 和页面错误
# =============================================================================

storage-io-error = I/O 错误：{ $message }
storage-invalid-page-size = 无效的页面大小：预期 { $expected }，实际 { $actual }
storage-invalid-page-id = 无效的页面 ID：{ $page_id }
storage-lock-error = 锁错误：{ $message }

# =============================================================================
# 内存错误
# =============================================================================

storage-memory-budget-exceeded = 超出内存预算：使用 { $used } 字节，预算为 { $budget } 字节
storage-no-index-to-evict = 没有可驱逐的索引（所有索引已在磁盘上）

# =============================================================================
# 一般错误
# =============================================================================

storage-not-implemented = 未实现：{ $message }
storage-other = { $message }
