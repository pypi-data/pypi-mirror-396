# VibeSQL Parser/Lexer Localization - Arabic (ar)
# This file contains all user-facing strings for lexer and parser errors.

# =============================================================================
# Lexer Error Header
# =============================================================================

lexer-error-at-position = خطأ في المحلل اللغوي في الموضع { $position }: { $message }

# =============================================================================
# String Literal Errors
# =============================================================================

lexer-unterminated-string = نص حرفي غير مكتمل

# =============================================================================
# Identifier Errors
# =============================================================================

lexer-unterminated-delimited-identifier = معرّف محدد غير مكتمل
lexer-empty-delimited-identifier = المعرّف المحدد الفارغ غير مسموح به

# =============================================================================
# Number Literal Errors
# =============================================================================

lexer-invalid-scientific-notation = تدوين علمي غير صالح: متوقع أرقام بعد 'E'

# =============================================================================
# Placeholder Errors
# =============================================================================

lexer-expected-digit-after-dollar = متوقع رقم بعد '$' لعنصر نائب مرقم
lexer-invalid-numbered-placeholder = عنصر نائب مرقم غير صالح: ${ $placeholder }
lexer-numbered-placeholder-zero = يجب أن يكون العنصر النائب المرقم $1 أو أعلى (لا يوجد $0)
lexer-expected-identifier-after-colon = متوقع معرّف بعد ':' لعنصر نائب مسمى

# =============================================================================
# Variable Errors
# =============================================================================

lexer-expected-variable-after-at-at = متوقع اسم متغير بعد @@
lexer-expected-variable-after-at = متوقع اسم متغير بعد @

# =============================================================================
# Operator Errors
# =============================================================================

lexer-unexpected-pipe = حرف غير متوقع: '|' (هل تقصد '||'؟)

# =============================================================================
# General Errors
# =============================================================================

lexer-unexpected-character = حرف غير متوقع: '{ $character }'
