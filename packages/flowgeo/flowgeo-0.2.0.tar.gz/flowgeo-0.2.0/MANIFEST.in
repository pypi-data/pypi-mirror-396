# 包含必要的文档文件
include README.md
include LICENSE
include requirements.txt

# 包含静态资源
recursive-include flowgeo/static *
recursive-include flowgeo/export/templates *.html

# 排除不需要的文件
exclude REFACTORING_NOTES.md
exclude INSTRUCTION.md
exclude *.html
exclude flowgeo.yaml

# 排除目录
recursive-exclude tests *
recursive-exclude output *
recursive-exclude lessons *
recursive-exclude assets *
recursive-exclude .claude *

# 排除 Python 缓存和编译文件
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store