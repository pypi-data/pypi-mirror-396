# semiautomatic environment configuration
# Copy this file to .env and fill in your values

# ---------------------------------------------------------------------------
# Anthropic (LLM - Prompt Generation)
# https://console.anthropic.com/
# ---------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ---------------------------------------------------------------------------
# OpenAI (LLM - Prompt Generation, optional)
# https://platform.openai.com/api-keys
# ---------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here

# ---------------------------------------------------------------------------
# FAL.ai (Image/Video Generation, Vision)
# https://fal.ai/dashboard/keys
# ---------------------------------------------------------------------------
FAL_KEY=your-fal-api-key-here

# ---------------------------------------------------------------------------
# Recraft (Image Generation)
# https://www.recraft.ai/
# ---------------------------------------------------------------------------
RECRAFT_API_KEY=your-recraft-api-key-here

# ---------------------------------------------------------------------------
# Freepik (Image Upscaling)
# https://www.freepik.com/api
# ---------------------------------------------------------------------------
FREEPIK_API_KEY=your-freepik-api-key-here

# ---------------------------------------------------------------------------
# Wavespeed (Video Generation)
# https://wavespeed.ai/
# ---------------------------------------------------------------------------
WAVESPEED_API_KEY=your-wavespeed-api-key-here

# ---------------------------------------------------------------------------
# Higgsfield (Video Generation with Motion Presets)
# https://higgsfield.ai/
# ---------------------------------------------------------------------------
HIGGSFIELD_API_KEY=your-higgsfield-api-key-here
HIGGSFIELD_SECRET=your-higgsfield-secret-here

# ---------------------------------------------------------------------------
# Cloudflare R2 Storage (for LoRA uploads, image hosting)
# https://dash.cloudflare.com/ -> R2
# ---------------------------------------------------------------------------
EU_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_S3_ACCESS_KEY=your-r2-access-key-here
CLOUDFLARE_S3_SECRET_ACCESS=your-r2-secret-key-here
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://pub-your-public-url.r2.dev
