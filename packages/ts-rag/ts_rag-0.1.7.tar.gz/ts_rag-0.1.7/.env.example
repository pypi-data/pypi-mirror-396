# TashanRAG 环境配置文件模板
# 复制此文件为 .env 并填入实际值

# ==================== API 配置（必需） ====================
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ==================== 模型配置 ====================
# 默认模型名称
MODEL_NAME=openai/qwen-flash

# ==================== 论文目录配置 ====================
# 论文根目录路径（支持绝对路径或相对路径）
TASHANRAG_PAPER_ROOT=01-文献
DEFAULT_PAPER_ROOT=01-文献

# ==================== 性能配置 ====================
# 并发处理的最大论文数
MAX_CONCURRENT_VISITS=5

# 默认检索的论文数量
TOP_K_DEFAULT=3

# ==================== 调试配置 ====================
# 是否开启调试模式（true/false）
DEBUG=false

# 是否输出详细信息（true/false）
VERBOSE=false

# ==================== 缓存配置 ====================
# 是否启用缓存（true/false）
ENABLE_CACHE=true
