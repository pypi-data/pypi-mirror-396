"""Celery configuration for Beanie modular projects."""

from celery import Celery

from app.core.config import settings

celery_app = Celery(
    "worker",
    broker=settings.REDIS_URL,
    backend=settings.REDIS_URL,
    include=["app.workers.tasks"],
)

celery_app.conf.update(
    task_serializer="json",
    accept_content=["json"],
    result_serializer="json",
    timezone="UTC",
    enable_utc=True,
    task_routes={
        "app.workers.tasks.debug_task": "main-queue",
        "app.workers.tasks.send_email_task": "main-queue",
        "app.workers.tasks.process_user_registration": "main-queue",
        "app.workers.tasks.cleanup_expired_tokens": "low-priority",
        "app.workers.tasks.generate_report": "low-priority",
    },
)
