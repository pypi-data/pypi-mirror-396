# Include documentation
include README.md
include CHANGELOG.md
include LICENSE
include USAGE.md
include RELEASE_v0.4.0.md

# Include release notes
include docs/releases/RELEASE_v0.4.1.md

# Include documentation directory
recursive-include docs *.md

# Exclude internal instruction files
global-exclude **/.instructions.md

# Exclude WIP UI (planned for v0.5.0)
prune interfaces/ui

# Exclude test files
global-exclude test_*.py
global-exclude *_test.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude .git*

# Exclude test artifacts
exclude password_vault.stcv
exclude config.enc
exclude config.enc.meta
exclude *.enc
exclude *.enc.meta
