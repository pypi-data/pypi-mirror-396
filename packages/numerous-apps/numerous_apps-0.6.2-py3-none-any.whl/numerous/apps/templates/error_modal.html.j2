<div id="error-modal" class="numerous-error-modal">
    <div class="numerous-error-modal-content">
        <div class="numerous-error-modal-header">
            <span class="numerous-error-modal-title">⚠️ Error</span>
            <button class="numerous-error-modal-close" onclick="document.getElementById('error-modal').style.display='none'">×</button>
        </div>
        <pre id="error-modal-message" class="numerous-error-modal-body"></pre>
        <button class="numerous-btn numerous-btn-primary" style="width: auto;" onclick="document.getElementById('error-modal').style.display='none'">Dismiss</button>
    </div>
</div>
