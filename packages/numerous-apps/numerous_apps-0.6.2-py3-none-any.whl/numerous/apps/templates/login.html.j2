<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default("Login") }}</title>
    <link rel="stylesheet" href="{{ base_path | default('') }}/numerous-static/css/numerous-base.css">
    <style>
        /* Additional login-specific styles that extend the base theme */
        body {
            font-family: var(--numerous-font-sans);
            background: var(--numerous-color-bg);
            color: var(--numerous-color-text);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            margin: 0;
        }

        /* Subtle grid background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image:
                linear-gradient(rgba(99, 102, 241, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(99, 102, 241, 0.03) 1px, transparent 1px);
            background-size: 60px 60px;
            pointer-events: none;
            z-index: -1;
        }
    </style>
</head>
<body>
    <div class="numerous-login-container">
        <div class="numerous-login-card">
            <div class="numerous-login-header">
                <div class="numerous-login-logo">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                    </svg>
                </div>
                <h1 class="numerous-login-title">Welcome back</h1>
                <p class="numerous-login-subtitle">Sign in to continue to your app</p>
            </div>

            <div id="error-message" class="numerous-error-message"></div>

            <form id="login-form" method="post">
                <div class="numerous-form-group">
                    <label class="numerous-form-label" for="username">Username</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        class="numerous-form-input"
                        placeholder="Enter your username"
                        required
                        autocomplete="username"
                        autofocus
                    >
                </div>

                <div class="numerous-form-group">
                    <label class="numerous-form-label" for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="numerous-form-input"
                        placeholder="Enter your password"
                        required
                        autocomplete="current-password"
                    >
                </div>

                <button type="submit" class="numerous-btn numerous-btn-primary" id="submit-btn">
                    <span class="numerous-loading-spinner" style="display: none;"></span>
                    <span class="numerous-btn-text">Sign in</span>
                </button>
            </form>

            <p class="numerous-footer-text">
                Powered by Numerous Apps
            </p>
        </div>
    </div>

    <script>
        const form = document.getElementById('login-form');
        const errorMessage = document.getElementById('error-message');
        const submitBtn = document.getElementById('submit-btn');
        const basePath = '{{ base_path | default("") }}';
        const nextUrl = '{{ next | default("/") }}';

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Hide previous error
            errorMessage.classList.remove('visible');

            // Show loading state
            submitBtn.classList.add('numerous-btn-loading');
            submitBtn.querySelector('.numerous-loading-spinner').style.display = 'inline-block';
            submitBtn.disabled = true;

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            try {
                const response = await fetch(`${basePath}/api/auth/login`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username, password }),
                    credentials: 'include', // Include cookies
                });

                const data = await response.json();

                if (response.ok) {
                    // Store access token in localStorage
                    localStorage.setItem('access_token', data.access_token);
                    localStorage.setItem('user', JSON.stringify(data.user));

                    // Redirect to the next URL or home
                    window.location.href = nextUrl;
                } else {
                    // Show error message
                    errorMessage.textContent = data.detail || 'Invalid username or password';
                    errorMessage.classList.add('visible');
                }
            } catch (error) {
                console.error('Login error:', error);
                errorMessage.textContent = 'An error occurred. Please try again.';
                errorMessage.classList.add('visible');
            } finally {
                // Reset loading state
                submitBtn.classList.remove('numerous-btn-loading');
                submitBtn.querySelector('.numerous-loading-spinner').style.display = 'none';
                submitBtn.disabled = false;
            }
        });

        // Check if already logged in
        (async () => {
            const token = localStorage.getItem('access_token');
            if (token) {
                try {
                    const response = await fetch(`${basePath}/api/auth/check`, {
                        headers: {
                            'Authorization': `Bearer ${token}`,
                        },
                    });
                    const data = await response.json();
                    if (data.authenticated) {
                        window.location.href = nextUrl;
                    }
                } catch (e) {
                    // Token invalid, clear it
                    localStorage.removeItem('access_token');
                    localStorage.removeItem('user');
                }
            }
        })();
    </script>
</body>
</html>
