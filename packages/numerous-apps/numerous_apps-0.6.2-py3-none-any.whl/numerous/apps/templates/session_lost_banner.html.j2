<div id="session-lost-banner" class="numerous-session-banner hidden">
    <div class="numerous-banner-content">
        <span class="numerous-banner-icon">⚠️</span>
        <span>Session has been lost. All unsaved changes will be lost.</span>
    </div>
    <div class="numerous-banner-actions">
        <button class="numerous-banner-btn numerous-banner-btn-primary" onclick="window.location.reload()">
            Reload Page
        </button>
        <button class="numerous-banner-btn numerous-banner-btn-secondary" onclick="dismissSessionLostBanner()">
            Dismiss
        </button>
    </div>
</div>

<script>
function dismissSessionLostBanner() {
    const banner = document.getElementById('session-lost-banner');
    if (banner) {
        banner.classList.add('hidden');
    }
}
</script>
